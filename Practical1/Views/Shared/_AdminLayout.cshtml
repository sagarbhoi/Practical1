<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@if (Session["email"] == null)
{
    Response.Redirect("/Admin/Index");
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Event Managment", "Home", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Home", "Admin")</li>
                    <li>@Html.ActionLink("Create Event", "CreateEvent", "Admin")</li>
                    <li>@Html.ActionLink("Assign Event", "AssignEvent", "Admin")</li>
                    <li>@Html.ActionLink("User List", "UserList", "Admin")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a>@Session["email"]</a></li>
                    <li>@Html.ActionLink("LogOut","Logout",new { },new { onclick = "return confirm('Are sure wants to LogOut?');" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:1%">
        @if (TempData["error"] != null)
        {
            <div class="alert alert-success">
                @TempData["error"]
            </div>
        }
        @RenderBody()

        <footer style="position:fixed;bottom:0">
            <hr />
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
