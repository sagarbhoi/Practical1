@model Practical1.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SignUp";
}
<style>
    .row {
        margin-top: 1%;
    }
</style>
<center>
    <h2>SignUp</h2>
</center>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<center>
    <div class="row form-group">

        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-sm-5" })
        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-sm-5" } })
        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger col-sm-2" })

    </div>


    <div class="row form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-sm-5" })
        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-sm-5" } })
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger col-sm-2" })
    </div>

    <div class="row form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-sm-5" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-sm-5" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger col-sm-2" })
    </div>
    <div class="row form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-sm-5" })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-sm-5" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger col-sm-2" })
    </div>
    <div class="row form-group">
        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-sm-5" })
        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control col-sm-5" } })
         @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger col-sm-2" })
    </div>

    <div class="row form-group">
        @Html.Hidden("Role", ViewBag.Role as String)
    </div>
    <div class="form-group row">
        <center>
            <input type="submit" value="SignUp" class="btn btn-primary" />
        </center>
    </div>
</center>

}

